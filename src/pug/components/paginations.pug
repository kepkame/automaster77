mixin pagination
  .nav-links
    ul.page-numbers
      //- li
      //-   a.page-number.prev(href="#")
      //-     +icon-mono('arrow')(width="10px", height="16px")
      li
        span.page-number.current(aria-current="page") 1
      li
        a.page-number(href="#") 2
      li
        a.page-number(href="#") 3
      li
        a.page-number.next(href="#")
          +icon-mono('arrow')(width="10px", height="16px")
