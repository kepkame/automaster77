mixin numberedListCards(data, className= false)
  .num-list-cards(class= (className) ? className : '')
    ol.num-list-cards__list
      each item in data
          li.num-list-cards__item(class= (!item.mark) ? 'num-list-cards__item--unmarked' : '')
            .num-list-cards__wrapper
              if (item.title)
                .num-list-cards__header
                  if (item.mark)
                    span.num-list-cards__counter
                  h4.num-list-cards__title #{item.title}
              if (item.text)
                p.num-list-cards__text #{item.text}

mixin stagesOfWork(data)
  section.stages-of-work(class= (data.class) ? `stages-of-work--${data.class}` : '')
    .container
      .stages-of-work__wrapper
        h2.stages-of-work__title.title-line #{data.title}
        +numberedListCards(data.cards, 'stages-of-work__cards')
