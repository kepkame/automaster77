mixin formInputFile(className= '', valueAccept= 'image/jpeg,image/png,video/*')
  div(class= className, class= "upload")
    .upload__row
      input.upload__input(type= "file", name= "photos", multiple, hidden="hidden")
      button.upload__btn(type= "button") Прикрепить
        span.upload__btn-mobile #{' '}фото
        span.upload__btn-desktop #{' '}фотографии
        span.upload__icon
          +icon-mono('camera')(width= "20px", height= "20px")
      span.upload__text Файл не выбран...
    .upload__row
      ul.upload__list
    .upload__row
      .upload__notice-error

mixin formPhoneInline(className= false)
  form.form-phone-inline(class= className)
    .form-phone-inline__row
      input.form-phone-inline__input(type= "tel", name= "form-phone-inline", placeholder= "+7 (___) ___-__-__ *", required)
      input.form-phone-inline__submit.btn.btn--small(type= "submit", value= "Отправить")
    p.form-agree
      span.wpcf7-form-control-wrap.agree
        span.wpcf7-form-control.wpcf7-acceptance.invert
          span.wpcf7-list-item
            input.agree(type= "checkbox", name= "form-phone-inline-agree", value= "1", aria-invalid= "false")
    p.form-phone-inline__acceptance Нажимая на кнопку «Отправить», Вы соглашаетесь #{' '}
      span с #{' '}
        a(href= sitePagePrivacy) условиями обработки персональных данных
        |.
